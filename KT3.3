namespace KT3._3
{
    internal class Program
    {
        static void Main(string[] args)
        {
            var intHolder = new GenericHolder<int>(67);
            var book = new Book<string>("A123", "451 градус по Фаренгейту", "Рэй Брэдбери", 256);
            var bookHolder = new GenericHolder<Book<string>>(book);
            Console.WriteLine($"intHolder.Value = {intHolder.Value}");
            Console.WriteLine($"bookHolder.Value = {bookHolder.Value}");
            intHolder.Reset();
            bookHolder.Reset();
            Console.WriteLine($"intHolder.Value = {intHolder.Value}");  
            Console.WriteLine($"bookHolder.Value = {bookHolder.Value}");
        }
    }
    class GenericHolder<T>
    {
        public T Value { get; private set; }
        public GenericHolder(T value)
        {
            Value = value;
        }
        public void Reset()
        {
            Value = default(T);
        }
    }
    class Book<TId>
    {
        public TId Id { get; set; }
        public string Name { get; set; }
        public string Author { get; set; }
        public int PagesCount { get; set; }
        public Book(TId id, string name, string author, int pagesCount)
        {
            Id = id;
            Name = name;
            Author = author;
            PagesCount = pagesCount;
        }
        public override string ToString()
        {
            return $"{Id} {Name}, {Author}, {PagesCount} страниц";
        }
    }

}
